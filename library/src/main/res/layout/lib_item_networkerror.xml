<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="56dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/lib_white"
    app:cardCornerRadius="24dp"
    app:cardElevation="0.6dp"
    android:visibility="visible"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <ImageView
            android:id="@+id/iv_wifi_left"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/lib_icon_wifi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_wifi_left"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:text="网络连接不上啦，请检查网络设置"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/lib_icon_right_enterwifi" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
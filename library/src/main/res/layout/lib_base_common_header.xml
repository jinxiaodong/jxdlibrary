<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/common_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/title_bar_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lib_main_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_bar_guider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/title_bar_title"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/title_bar_back"
                android:layout_width="38dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:src="@drawable/lib_icon_back"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/title_bar_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLength="12"
                android:singleLine="true"
                android:text="@string/lib_login"
                android:textColor="@color/lib_white"
                android:textSize="@dimen/font_18sp"
                />

            <TextView
                android:id="@+id/title_bar_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="14dp"
                android:text="完成"
                android:textColor="@color/lib_white"
                android:textSize="@dimen/font_16sp"
                android:visibility="gone"

                />

            <ImageView
                android:id="@+id/iv_share_information"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:padding="10dp"
                android:src="@drawable/lib_icon_share"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:padding="10dp"
                android:src="@drawable/lib_icon_plus"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/native_title_panxu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/native_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="按时间"
                    android:textColor="@color/lib_white"
                    android:textSize="@dimen/font_15sp"
                    />

                <ImageView
                    android:id="@+id/native_title_iamge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:rotation="180"
                    android:src="@drawable/lib_icon_arrow_top"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
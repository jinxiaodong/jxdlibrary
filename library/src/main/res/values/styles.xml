<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/lib_shadow_left</item>
        <item name="shadow_right">@drawable/lib_shadow_right</item>
        <item name="shadow_bottom">@drawable/lib_shadow_bottom</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/lib_loaddialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>